.user {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 40rpx 20rpx 20rpx 20rpx;
}
.avatar {
  overflow:hidden;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-right: 40rpx;
}
.user_name {
  max-width: 380rpx;
  white-space: nowrap;
  word-wrap: normal;
  text-overflow: ellipsis;
  overflow: hidden;
  flex-grow: 1;
}
.goto_setting {
  font-size: 30rpx;
  color: #fc5f9b;
  border: solid 1rpx #fc5f9b;
  border-radius: 15rpx;
  padding: 10rpx 16rpx;
}

.setting {
  margin: 40rpx 20rpx 20rpx 20rpx;
  font-size: 33rpx;
}
.duration {
  margin-bottom: 15rpx;
}

.mark_aunt {
  display:flex;
  font-size: 40rpx;
  margin-left: 20rpx;
  margin-top: 30rpx;
}
.goto_mark {
  margin-left: 50rpx;
  font-size: 30rpx;
  color: #fc5f9b;
  border: solid 1rpx #fc5f9b;
  border-radius: 10rpx;
  padding: 5rpx;
}

.clear_storage {
  display: inline-block;
  margin: 100rpx 0 30rpx 200rpx;
  padding: 10rpx;
  font-size: 40rpx;
  color: #fc5f9b;
  border: solid 1rpx #fc5f9b;
  border-radius: 20rpx;
}
